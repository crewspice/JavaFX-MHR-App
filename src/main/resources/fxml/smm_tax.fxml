<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MaxHighReach.SMMTaxController">
    <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
        <Label text="Enter Date Range (MM-YYYY):" />
        <TextField fx:id="dateRangeTextField" promptText="MM-YYYY"/>
        <Button text="Run SMM Tax" fx:id="runSMMButton" onAction="#handleRunSMM"/>
        <Label fx:id="statusLabel" text=""/>
        <VBox fx:id="loadingIndicator" visible="false" alignment="CENTER">
            <Label text="Running..."/>
        </VBox>
        <HBox fx:id="confirmationPrompt" spacing="30" alignment="CENTER" visible="false">
            <Label text="Is the invoices file ready?" />
            <Button text="Yes" onAction="#handleConfirmationYes"/>
            <Button text="No" onAction="#handleConfirmationNo"/>
        </HBox>
    </VBox>
    <Button fx:id="backButton" text="Back" layoutX="250" layoutY="10" onAction="#handleBack"/>
</AnchorPane>
